  download_pkg "${gtest_pkg}" "https://github.com/google/googletest/archive/${gtest_dl_pkg}"
  [[ "${OPT_DOWNLOAD_ONLY}" = "true" ]] && return 0
  
  info "Installing Google Test ${GTEST_VER} ..."
  tar xzf "${gtest_pkg}"
