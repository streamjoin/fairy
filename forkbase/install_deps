    make -j "${NCORES}"
    make install
  )
  rm -rf "${python2_dir}" "${python2_pkg}"
  
cat >> "${BASH_PROFILE}" <<-'EndOfMsg'
# Python 2
export PYTHON_ROOT="${USTORE_DEPS_HOME}/python"
